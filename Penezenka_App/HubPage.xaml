                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" Style="{StaticResource BodyTextBlockStyle}" VerticalAlignment="Center" />
                                            <Border Grid.Row="0" Grid.Column="1" Padding="3"  Background="{Binding Color.Color, Converter={StaticResource ColorToBrushConverter}}">
                                                <TextBlock Text="{Binding Color.Text}" FontSize="14" TextAlignment="Center" VerticalAlignment="Center" Foreground="{Binding Color, Converter={StaticResource ColorToBWConverter}}" Style="{StaticResource BodyTextBlockStyle}" />
                                            </Border>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <TextBlock Visibility="{Binding Tags.Count, Converter={StaticResource CountToVisibilityConverter}}" Style="{StaticResource EmptyListTextBlockStyle}"/>
                        </Grid>
                    </ScrollViewer>
                </DataTemplate>
            </HubSection>
        </Hub>
        <Grid x:Name="LoadingBarGrid" Background="{Binding LoadingBarGridBackground}">
            <StackPanel VerticalAlignment="Center">
                <ProgressBar x:Name="LoadingBar" IsEnabled="False" IsIndeterminate="true" Height="4" HorizontalAlignment="Stretch"/>
                <TextBlock Text="Načítají se grafy..." Margin="0" HorizontalAlignment="Center" Style="{StaticResource BodyTextBlockStyle}" />
            </StackPanel>
        </Grid>
    </Grid>

</Page>