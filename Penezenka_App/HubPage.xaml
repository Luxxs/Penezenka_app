<Page
    x:Class="Penezenka_App.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Penezenka_App"
    xmlns:converters="using:Penezenka_App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Penezenka_App.Data"
    DataContext="{Binding HubPageViewModel, RelativeSource={RelativeSource Self}}"
    d:DataContext="{Binding Source={d:DesignData Source=/DataModel/SampleData.json, Type=data:SampleDataSource}}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:AmountToStringConverter x:Key="Amount2StringConv" />
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <converters:CastkaToColorBrushConverter x:Key="CastkaToColorBrushConverter" />
        <converters:DateToStringConverter x:Key="DateToStringConverter" />
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <converters:ColorToBWConverter x:Key="ColorToBWConverter" />
        <converters:RecurrenceToSymbolConverter x:Key="RecurrenceToSymbolConverter" />
        <DataTemplate x:Key="HubSectionHeaderTemplate">
            <TextBlock Margin="0,0,0,-9.5" Text="{Binding}"/>
        </DataTemplate>
        <Style x:Key="TxtBlokStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
        </Style>
    </Page.Resources>

    <Grid x:Name="LayoutRoot" Loaded="LayoutRoot_OnLoaded">
        <Hub x:Name="Hub" x:Uid="Hub" Header="peněženka" RenderTransformOrigin="0.5,0.5">
        	<Hub.Background>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
        			<LinearGradientBrush.RelativeTransform>
        				<CompositeTransform/>
        			</LinearGradientBrush.RelativeTransform>
        			<GradientStop Color="Black"/>
        			<GradientStop Color="#FF323232" Offset="1"/>
        		</LinearGradientBrush>
        	</Hub.Background>
            <HubSection x:Uid="HubSection1" Header="NOVÝ ZÁZNAM" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}" Width="16">
                <DataTemplate>
                    <StackPanel>
                        <Button HorizontalAlignment="Left" BorderThickness="0" Background="#40ffffff" Height="129" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Top" Width="335">
                            <Grid Height="101" Width="325" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Assets/pridat_prijem.png" Width="80" Height="80" Grid.Column="0" />
                                <TextBlock Text="Nový příjem" VerticalAlignment="Center" Grid.Column="1" Margin="25,38,0,39" />
                            </Grid>
                        </Button>
                        <Button HorizontalAlignment="Left" BorderThickness="0" Background="#40ffffff" Height="129" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Top" Width="335" Click="PridatVydaj">
                            <Grid Height="101" Width="325" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Assets/pridat_vydaj.png" Width="80" Height="80" Grid.Column="0" />
                                <TextBlock Text="Nový výdaj" VerticalAlignment="Center" Grid.Column="1" Margin="25,38,0,39" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection2" Name="RecordsHubSection" Header="TENTO MĚSÍC" Width="Auto"
                         HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}"
                        d:DataContext="{Binding Groups[0]}">
                <FlyoutBase.AttachedFlyout>
                    <Flyout>
                        <Grid Margin="20,20,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Odstranit?" Style="{StaticResource MessageDialogTitleStyle}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,20" Text="Opravdu si přejete odstranit tento záznam?" Style="{StaticResource MessageDialogContentStyle}"/>
                            <Button Name="RecordDeleteConfirmBtn"  Grid.Row="2" Grid.Column="0" Content="Odstranit" Click="RecordDeleteConfirmBtn_OnClick" HorizontalAlignment="Stretch" Margin="0,0,10,0"/>
                            <Button Name="RecordDeleteCancelBtn" Grid.Row="2" Grid.Column="1" Content="Storno" Click="RecordDeleteCancelBtn_OnClick" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
                        </Grid>
                    </Flyout>
                </FlyoutBase.AttachedFlyout>
                <DataTemplate>
                    <Grid Margin="0,0,-0.167,-4.833">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--<StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        	<Button Content="«" MinWidth="40" Margin="0" Click="MonthPlus_BtnCLick" VerticalAlignment="Top" />
                            <DatePicker x:Name="ListedMonth" DayVisible="False" MinYear="{Binding PolMinYear, Mode=OneTime}" MaxYear="{Binding PolMaxYear, Mode=OneTime}" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" MonthFormat="{}{month.solo.full}" MonthVisible="True" HorizontalContentAlignment="Center"/>
                        	<Button Content="»" MinWidth="40" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top" />
                        </StackPanel>-->
                        <ScrollViewer Padding="0,0,7,0" Grid.Row="1">
                            <ListView 
                                x:Name="RecordsListView"
                                SelectionMode="None"
                                IsItemClickEnabled="True"
                                ItemsSource="{Binding Records}"
                                ItemClick="RecordsListView_ItemClick"
                                ContinuumNavigationTransitionInfo.ExitElementContainer="True" VerticalAlignment="Top">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Holding="ItemGrid_Holding" IsHoldingEnabled="True" Margin="0,0,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="190"/>
                                                <ColumnDefinition Width="80"/>
                                                <ColumnDefinition Width="20"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Smazat" Click="RecordDelete_Click" />
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Date, Converter={StaticResource DateToStringConverter}}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" Foreground="{StaticResource PhoneAccentBrush}" VerticalAlignment="Bottom" />
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Title}" FontSize="21.333" Margin="0,0,0,-5" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemTextBlockStyle}" />
                                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" TextAlignment="Right" FontSize="20" Text="{Binding Amount, Converter={StaticResource Amount2StringConv}}" Style="{ThemeResource ListViewItemTextBlockStyle}" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" />
                                            <TextBlock Grid.Row="1" Grid.Column="3" TextAlignment="Right" Text="{Binding RecurrenceType, Converter={StaticResource RecurrenceToSymbolConverter}}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <GridView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4"
                                                      ItemsSource="{Binding Tags}"
                                                      ScrollViewer.VerticalScrollMode="Disabled">
                                                <GridView.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapGrid Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </GridView.ItemsPanel>
                                                <GridView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="{Binding Color.Color, Converter={StaticResource ColorToBrushConverter}}">
                                                            <TextBlock Text="{Binding Title}" MinWidth="80" FontSize="12" Padding="2,0,2,1" HorizontalAlignment="Left" Foreground="{Binding Color, Converter={StaticResource ColorToBWConverter}}"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </GridView.ItemTemplate>
                                                <GridView.ItemContainerStyle>
                                                    <Style TargetType="FrameworkElement">
                                                        <Setter Property="Margin" Value="0,0,3,3"/>
                                                    </Style>
                                                </GridView.ItemContainerStyle>
                                            </GridView>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </ScrollViewer>
                        <TextBlock Text="« žádné položky »" Foreground="SlateGray" Grid.Row="0" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,0"
                                       Visibility="{Binding Records.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                        <Grid Margin="0,5,0,10" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Bilance" Grid.Row="0" Grid.ColumnSpan="2" FontSize="20" />
                            <TextBlock Text="Příjmy za tento měsíc:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="Výdaje za tento měsíc:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="Celkem:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_IncomeSum, Converter={StaticResource Amount2StringConv}}" TextAlignment="Right" Grid.Row="1" Grid.Column="1" Foreground="{Binding Records_IncomeSum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_ExpenseSum, Converter={StaticResource Amount2StringConv}}" TextAlignment="Right" Grid.Row="2" Grid.Column="1" Foreground="{Binding Records_ExpenseSum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_Sum, Converter={StaticResource Amount2StringConv}}" TextAlignment="Right" Grid.Row="3" Grid.Column="1" Foreground="{Binding Records_Sum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection3" Header="SOUHRNY"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <TextBlock Text="Nějaké koláče a součty" FontSize="16" />
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection4" Name="TagHubSection" Header="SYNCHRONIZACE / EXPORT / ŠTÍTKY ?"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}" Height="609">
            	<FlyoutBase.AttachedFlyout>
            		<Flyout>
                        <Grid Margin="20,20,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Odstranit?" Style="{StaticResource MessageDialogTitleStyle}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,20" Text="Opravdu si přejete odstranit tento záznam?" Style="{StaticResource MessageDialogContentStyle}"/>
                            <Button Name="TagDeleteConfirmBtn"  Grid.Row="2" Grid.Column="0" Content="Odstranit" Click="TagDeleteConfirmBtn_OnClick" HorizontalAlignment="Stretch" Margin="0,0,10,0"/>
                            <Button Name="TagDeleteCancelBtn" Grid.Row="2" Grid.Column="1" Content="Storno" Click="TagDeleteCancelBtn_OnClick" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
                        </Grid>
            		</Flyout>
            	</FlyoutBase.AttachedFlyout>
                <DataTemplate>
                    <ScrollViewer Margin="0">
                        <ListView x:Name="TagsListView"
                                  ItemsSource="{Binding Tags}"
                                  IsItemClickEnabled="True"
                                  ItemClick="TagsListView_ItemClick">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0" Width="340" Holding="ItemGrid_Holding" IsHoldingEnabled="True">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="120" />
                                        </Grid.ColumnDefinitions>
                                        <FlyoutBase.AttachedFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Smazat" Click="TagDelete_Click" />
                                            </MenuFlyout>
                                        </FlyoutBase.AttachedFlyout>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" VerticalAlignment="Center" Style="{StaticResource BodyTextBlockStyle}" />
                                        <Border Grid.Row="0" Grid.Column="1" Background="{Binding Color.Color, Converter={StaticResource ColorToBrushConverter}}">
                                            <TextBlock Text="{Binding Color.Text}" Padding="4,2,4,2" TextAlignment="Center" FontSize="14" Style="{StaticResource BodyTextBlockStyle}" Foreground="{Binding Color, Converter={StaticResource ColorToBWConverter}}" />
                                        </Border>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection5" Header="UPOMÍNKY"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
                <DataTemplate>
                    <TextBlock Text="Kalendář" FontSize="16" />
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar Name="HubPageCommandBar">
            <AppBarButton Name="AddTagAppBarButton" Icon="Add" Label="přidat štítek" Click="AddTagAppBarButton_OnClick"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Uid="SecondaryButton1" x:Name="Settings" Label="nastavení" Click="Settings_OnClick" />
                <AppBarButton x:Uid="SecondaryButton2" x:Name="About" Label="o aplikaci" Click="About_OnClick" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>