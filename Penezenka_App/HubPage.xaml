<Page
    x:Class="Penezenka_App.HubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Penezenka_App"
    xmlns:converters="using:Penezenka_App.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sampleData="using:Penezenka_App.SampleData"
    xmlns:otherClasses="using:Penezenka_App.OtherClasses"
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    DataContext="{Binding HubPageViewModels, RelativeSource={RelativeSource Self}}"
    d:DataContext="{Binding Source={d:DesignInstance Type=sampleData:RecordsModel, IsDesignTimeCreatable=True}}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
        <converters:CastkaToColorBrushConverter x:Key="CastkaToColorBrushConverter" />
        <converters:RecurrenceToSymbolConverter x:Key="RecurrenceToSymbolConverter" />
        <converters:StringFormatConverter x:Key="StringFormatConverter"/>
        <converters:AutomaticallyToStringConverter x:Key="AutomaticallyToStringConverter"/>
        <DataTemplate x:Key="HubSectionHeaderTemplate">
            <TextBlock Margin="0,0,0,-9.5" Text="{Binding}"/>
        </DataTemplate>
        <Style x:Key="TxtBlokStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
        </Style>
        <Flyout x:Key="DeleteConfirmFlyout">
            <Grid Margin="20,20,20,70">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Odstranit?" Style="{StaticResource MessageDialogTitleStyle}" Margin="0,0,0,10"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,20" Text="Opravdu si přejete odstranit tento záznam? Jde-li o poslední z řady fixních záznamů, bude automatické přidávání tohoto výdaje zrušeno." Style="{StaticResource MessageDialogContentStyle}"/>
                <Button Name="RecordDeleteConfirmBtn"  Grid.Row="2" Grid.Column="0" Content="Odstranit" Click="RecordDeleteConfirmBtn_OnClick" HorizontalAlignment="Stretch" Margin="0,0,10,0"/>
                <Button Name="RecordDeleteCancelBtn" Grid.Row="2" Grid.Column="1" Content="Storno" Click="RecordDeleteCancelBtn_OnClick" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
            </Grid>
        </Flyout>
        <PickerFlyout x:Key="TransferPickerFlyout" ConfirmationButtonsVisible="True" Opening="TransferPickerFlyout_OnOpening" Opened="TransferPickerFlyout_OnOpened" Confirmed="TransferPickerFlyout_OnConfirmed">
            <StackPanel>
                <TextBlock Text="Trasfer položky" Style="{ThemeResource MessageDialogTitleStyle}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Z účtu: " Style="{ThemeResource MessageDialogContentStyle}"/>
                    <TextBlock Name="TransferPickerCurrentAccount" Text="{Binding TransferRecord.Account.Title}" Style="{ThemeResource MessageDialogContentStyle}"/>
                </StackPanel>
                <ComboBox Name="TransferPickerNewAccount" Header="Na účet" ItemsSource="{Binding TransferAccounts}"></ComboBox>
                <TextBlock Name="TransferPickerNoAccount" Text="Vyberte nový účet" Foreground="Red" Margin="7,0,0,0" Visibility="Collapsed" Style="{ThemeResource MessageDialogContentStyle}"/>
            </StackPanel>
        </PickerFlyout>
    </Page.Resources>

    <Grid x:Name="LayoutRoot">
        <Hub x:Name="Hub" x:Uid="Hub" Header="peněženka" RenderTransformOrigin="0.5,0.5" SectionsInViewChanged="Hub_OnSectionsInViewChanged">
        	<Hub.Background>
        		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.5">
        			<LinearGradientBrush.RelativeTransform>
        				<CompositeTransform/>
        			</LinearGradientBrush.RelativeTransform>
        			<GradientStop Color="Black"/>
        			<GradientStop Color="#FF323232" Offset="1"/>
        		</LinearGradientBrush>
        	</Hub.Background>
            
            <HubSection x:Uid="HubSection1" Name="NewButtonsHubSection" Header="NOVÝ ZÁZNAM" HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}" Width="16">
                <DataTemplate>
                    <StackPanel>
                        <Button HorizontalAlignment="Left" BorderThickness="0" Background="#40ffffff" Height="129" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Top" Width="335" Click="AddIncome">
                            <Grid Height="101" Width="325" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Assets/pridat_prijem.png" Width="80" Height="80" Grid.Column="0" />
                                <TextBlock Text="Nový příjem" VerticalAlignment="Center" Grid.Column="1" Margin="25,38,0,39" />
                            </Grid>
                        </Button>
                        <Button HorizontalAlignment="Left" BorderThickness="0" Background="#40ffffff" Height="129" Margin="0,0,0,0" Padding="0,0,0,0" VerticalAlignment="Top" Width="335" Click="AddExpense">
                            <Grid Height="101" Width="325" HorizontalAlignment="Stretch">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Image Source="ms-appx:///Assets/pridat_vydaj.png" Width="80" Height="80" Grid.Column="0" />
                                <TextBlock Text="Nový výdaj" VerticalAlignment="Center" Grid.Column="1" Margin="25,38,0,39" />
                            </Grid>
                        </Button>
                        <Button Name="AccountManagementButton" BorderThickness="0" Background="#40ffffff" Height="84" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="70" MinHeight="70" Padding="9.5,0,3,3.5" Click="AccountManagementButton_OnClick">
                            <Image Source="ms-appx:///Assets/wallets_white.png" Width="64" Height="64" Stretch="Fill" RequestedTheme="Dark"/>
                        </Button>
                    </StackPanel>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection2" Name="RecordsHubSection" Header="TENTO MĚSÍC" Width="Auto"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}"
                        DataContext="{Binding RecordsViewModel}"
                        d:DataContext="{Binding}">
                <FlyoutBase.AttachedFlyout>
                    <StaticResource ResourceKey="DeleteConfirmFlyout" />
                </FlyoutBase.AttachedFlyout>
                <DataTemplate>
                    <Grid Margin="0,0,-0.167,-4.833">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!--<StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                        	<Button Content="«" MinWidth="40" Margin="0" Click="MonthPlus_BtnCLick" VerticalAlignment="Top" />
                            <DatePicker x:Name="ListedMonth" DayVisible="False" MinYear="{Binding PolMinYear, Mode=OneTime}" MaxYear="{Binding PolMaxYear, Mode=OneTime}" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" MonthFormat="{}{month.solo.full}" MonthVisible="True" HorizontalContentAlignment="Center"/>
                        	<Button Content="»" MinWidth="40" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Top" />
                        </StackPanel>-->
                        <ListView Grid.Row="1" Padding="0,0,10,0" 
                                Name="RecordsListView"
                                IsItemClickEnabled="True"
                                ItemsSource="{Binding Records}"
                                ItemClick="RecordsListView_ItemClick"
                                VerticalAlignment="Top"
                                ScrollViewer.VerticalScrollMode="Enabled">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" Holding="ItemBorder_Holding" IsHoldingEnabled="True" Padding="3,0,5,3" BorderBrush="LightSlateGray" Margin="0,0,0,7">
                                        <FlyoutBase.AttachedFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Upravit" Click="RecordEdit_Click"/>
                                                <MenuFlyoutItem Text="Převést na jiný účet" Click="RecordTransfer_Click"/>
                                                <MenuFlyoutItem Text="Smazat" Click="RecordDelete_Click"/>
                                            </MenuFlyout>
                                        </FlyoutBase.AttachedFlyout>
                                        <Grid Name="RecordGrid" Width="330">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition Height="0"/>
                                                <RowDefinition Height="0"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Date, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:d.M.y\}'}" Foreground="{StaticResource PhoneAccentBrush}" VerticalAlignment="Bottom" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Title}" FontSize="21.333" Margin="0,0,0,-5" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemTextBlockStyle}" />
                                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" TextAlignment="Right" FontSize="20" Text="{Binding Amount, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:c\}'}" Style="{ThemeResource ListViewItemTextBlockStyle}" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" />
                                            <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" Orientation="Horizontal">
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding RecurrenceChain, Converter={StaticResource RecurrenceToSymbolConverter}}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                                                <TextBlock HorizontalAlignment="Right" Text="{Binding Automatically, Converter={StaticResource AutomaticallyToStringConverter}}" FontSize="10.667" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" VerticalAlignment="Bottom" Height="12"/>
                                            </StackPanel>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Účet:" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Account.Title}" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RecurrenceChain}" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <GridView Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,5,0,0"
                                                      ItemsSource="{Binding Tags}"
                                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                      ItemTemplate="{ThemeResource SmallTagItemTemplate}"
                                                      ItemsPanel="{StaticResource SmallTagItemsPanelTemplate}"
                                                      IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsHitTestVisible="False"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <TextBlock Grid.Row="0" Visibility="{Binding Records.Count, Converter={StaticResource CountToVisibilityConverter}}" Style="{StaticResource EmptyListTextBlockStyle}"/>
                        <Grid Name="BilanceGrid" Margin="0,5,0,10" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <HyperlinkButton Content="Bilance" Grid.Row="0" Grid.ColumnSpan="2" FontSize="20" Click="BilanceHide_Click"/>
                            <TextBlock Text="Příjmy za tento měsíc:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="Výdaje za tento měsíc:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="Celkový zůstatek:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_IncomeSum, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0\} Kč'}" TextAlignment="Right" Grid.Row="1" Grid.Column="1" Foreground="{Binding Records_IncomeSum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_ExpenseSum, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0\} Kč'}" TextAlignment="Right" Grid.Row="2" Grid.Column="1" Foreground="{Binding Records_ExpenseSum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                            <TextBlock Text="{Binding Records_Balance, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0\} Kč'}" TextAlignment="Right" Grid.Row="3" Grid.Column="1" Foreground="{Binding Records_Sum, Converter={StaticResource CastkaToColorBrushConverter}}" Style="{StaticResource TxtBlokStyle}" />
                        </Grid>
                    </Grid>
                </DataTemplate>
            </HubSection>
            
            <HubSection x:Uid="HubSection3" Name="ChartsHubSection" Header="GRAFY"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}"
                        DataContext="{Binding RecordsViewModel}">
                <DataTemplate>
                    <ScrollViewer>
                        <StackPanel>
                            <charting:Chart Name="PieChart" Width="240" Height="240" Loaded="PieChart_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <charting:Chart.Series>
                                    <charting:PieSeries Title="Výdaje podle štítků" Margin="0" ItemsSource="{Binding RecordsPerTagChartMap}" IndependentValueBinding="{Binding Title}" DependentValueBinding="{Binding Amount}"/>
                                </charting:Chart.Series>
                            </charting:Chart>
                            <charting:Chart Name="LineChart" Width="340" Height="220" Loaded="LineChart_Loaded" HorizontalAlignment="Left" VerticalAlignment="Top">
                                <charting:Chart.Series>
                                    <charting:LineSeries Title="Zůstatek" Margin="0" ItemsSource="{Binding BalanceInTime}" IndependentValueBinding="{Binding Date}" DependentValueBinding="{Binding Balance}" IsSelectionEnabled="True">
                                        <charting:LineSeries.BorderThickness>3</charting:LineSeries.BorderThickness>
                                    </charting:LineSeries>
                                </charting:Chart.Series>
                            </charting:Chart>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection5" Name="RecurrenceHubSection" Header="NADCHÁZEJÍCÍ FIXNÍ PŘÍJMY A VÝDAJE"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}"
                        DataContext="{Binding PendingRecordsViewModel}"
                        d:DataContext="{Binding}">
                <DataTemplate>
                    <StackPanel>
                        <ListView Name="PendingRecordsListView"
                                  Padding="0,0,10,0"
                                  ItemsSource="{Binding Records}"
                                  ItemClick="RecordsListView_ItemClick"
                                  IsItemClickEnabled="True"
                                  ScrollViewer.VerticalScrollMode="Enabled"
                                  VerticalAlignment="Top">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderThickness="1" Holding="ItemBorder_Holding" IsHoldingEnabled="True" BorderBrush="SandyBrown" Padding="3,0,5,3" Margin="0,0,0,7">
                                        <FlyoutBase.AttachedFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Zrušit fixní výdaj" Click="PendingRecurrenceDisable_Click"/>
                                            </MenuFlyout>
                                        </FlyoutBase.AttachedFlyout>
                                        <Grid Name="RecordGrid" Width="320">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="40"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                                <RowDefinition Height="0"/>
                                                <RowDefinition Height="0"/>
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Date, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:d.M.yy\}'}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" Foreground="{StaticResource PhoneAccentBrush}" VerticalAlignment="Bottom" />
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Title}" FontSize="21.333" Margin="0,0,0,-5" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemTextBlockStyle}" />
                                            <TextBlock Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" TextAlignment="Right" FontSize="20" Text="{Binding Amount, Converter={StaticResource StringFormatConverter}, ConverterParameter='\{0:c\}'}" Style="{ThemeResource ListViewItemTextBlockStyle}" VerticalAlignment="Top"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}" />
                                            <TextBlock Grid.Row="1" Grid.Column="3" TextAlignment="Right" Text="{Binding RecurrenceChain, Converter={StaticResource RecurrenceToSymbolConverter}}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Účet:" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Account.Title}" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding RecurrenceChain}" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}"/>
                                            <GridView Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,5,0,0"
                                                      ItemsSource="{Binding Tags}"
                                                      ScrollViewer.VerticalScrollMode="Disabled"
                                                      ItemTemplate="{ThemeResource SmallTagItemTemplate}"
                                                      ItemsPanel="{StaticResource SmallTagItemsPanelTemplate}"
                                                      IsTapEnabled="False" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsHitTestVisible="False">
                                            </GridView>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock Visibility="{Binding Records.Count, Converter={StaticResource CountToVisibilityConverter}}" Style="{StaticResource EmptyListTextBlockStyle}"/>
                    </StackPanel>
                </DataTemplate>
            </HubSection>

            <HubSection x:Uid="HubSection4" Name="TagHubSection" Header="ŠTÍTKY"
                        HeaderTemplate="{ThemeResource HubSectionHeaderTemplate}">
            	<FlyoutBase.AttachedFlyout>
            		<Flyout>
                        <Grid Margin="20,20,20,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Odstranit?" Style="{StaticResource MessageDialogTitleStyle}" Margin="0,0,0,10"/>
                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Margin="0,0,0,20" Text="Opravdu si přejete odstranit tento záznam?" Style="{StaticResource MessageDialogContentStyle}"/>
                            <Button Name="TagDeleteConfirmBtn"  Grid.Row="2" Grid.Column="0" Content="Odstranit" Click="TagDeleteConfirmBtn_OnClick" HorizontalAlignment="Stretch" Margin="0,0,10,0"/>
                            <Button Name="TagDeleteCancelBtn" Grid.Row="2" Grid.Column="1" Content="Storno" Click="TagDeleteCancelBtn_OnClick" HorizontalAlignment="Stretch" Margin="10,0,0,0"/>
                        </Grid>
            		</Flyout>
            	</FlyoutBase.AttachedFlyout>
                <DataTemplate>
                    <ScrollViewer Margin="0">
                        <StackPanel>
                            <ListView x:Name="TagsListView"
                                      ItemsSource="{Binding Tags}"
                                      IsItemClickEnabled="True"
                                      ItemClick="TagsListView_ItemClick"
                                      ContinuumNavigationTransitionInfo.ExitElementContainer="True">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0" Width="340" Holding="ItemBorder_Holding" IsHoldingEnabled="True">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="120" />
                                            </Grid.ColumnDefinitions>
                                            <FlyoutBase.AttachedFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Smazat" Click="TagDelete_Click" />
                                                </MenuFlyout>
                                            </FlyoutBase.AttachedFlyout>
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Title}" VerticalAlignment="Center" Style="{StaticResource BodyTextBlockStyle}" />
                                            <Border Grid.Row="0" Grid.Column="1" Background="{Binding Color.Color, Converter={StaticResource ColorToBrushConverter}}">
                                                <TextBlock Text="{Binding Color.Text}" Padding="4,2,4,2" TextAlignment="Center" FontSize="14" Style="{StaticResource BodyTextBlockStyle}" Foreground="{Binding Color, Converter={StaticResource ColorToBWConverter}}" />
                                            </Border>
                                            <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Notes}" TextTrimming="CharacterEllipsis" Style="{StaticResource ListViewItemSubheaderTextBlockStyle}" />
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                            <TextBlock Visibility="{Binding Tags.Count, Converter={StaticResource CountToVisibilityConverter}}" Style="{StaticResource EmptyListTextBlockStyle}"/>
                        </StackPanel>
                    </ScrollViewer>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar Name="HubPageCommandBar">
            <AppBarButton x:Name="FilterAppBarButton" Icon="Filter" Label="filtrovat" Click="FilterAppBarButton_OnClick"/>
            <AppBarButton Name="AddTagAppBarButton" Icon="Add" Label="přidat štítek" Click="AddTagAppBarButton_OnClick" Visibility="Collapsed"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:Uid="SecondaryButton1" x:Name="Settings" Label="nastavení" Click="Settings_OnClick" />
                <AppBarButton x:Uid="SecondaryButton2" x:Name="About" Label="o aplikaci" Click="About_OnClick" />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
</Page>